
<MenuWidget> :
    canvas.before :
        Color :
            rgba : 0,0,0,0.8
        Rectangle :
            size : self.size
    Label :
        font_name : 'fonts/Eurostile.ttf'
        font_size : dp(root.parent.score_font_size*2)
        text : str(root.parent.score) if root.parent.score != 0 else ""
        pos_hint : {"center_x" : 0.5, "center_y" : 0.8}

    Label :
        font_name : 'fonts/Sackers-Gothic-Std-Light.ttf'
        font_size : dp(root.parent.score_font_size*2.5)
        text : root.parent.menu_title
        pos_hint : {"center_x" : 0.5, "center_y" : 0.5}

    Button :
        font_name : 'fonts/Eurostile.ttf'
        font_size : dp(root.parent.score_font_size*1.5)
        text : root.parent.menu_button_title
        pos_hint : {"center_x" : 0.5, "center_y" : 0.3}
        size_hint : 0.2, 0.15
        on_press : root.parent.on_menu_button_pressed()
        background_normal : ''
        background_color : 1, .3, .4, .80